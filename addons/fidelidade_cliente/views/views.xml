<odoo>
  <data>

    <record model="ir.ui.view" id ="fidelidade_cliente.form">
      <field name="name">fidelidade_cliente form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page string="Membresía">
            <group>
              <field name="codigo_socio" string="Código del sócio"/>
              <field name="nivel_fidelidad" string="Nivel de fidelidad"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="fidelidade_cliente.list">
      <field name="name">fidelidade_cliente list</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//list/field[@name='complete_name']" position="after">
          <field name="nivel_fidelidad" string="Nivel de fidelidad"/>
        </xpath>
        <xpath expr="//list/field[@name='nivel_fidelidad']" position="attributes">
          <attribute name="decoration-info">nivel_fidelidad in ('Gold','Premium')</attribute>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="fidelidade_cliente.kanban">
      <field name="name">fidelidade_cliente kanban</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.res_partner_kanban_view"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@class='mb-1']/field[@name='display_name']" position="after">
          <br/>
          <b>
            <field name="nivel_fidelidad"/>
          </b>
        </xpath>
      </field>
    </record>

